generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String?  @unique
  following CreatorFollow[]
  progress  Progress[]
}
model Creator {
  id        Int     @id @default(autoincrement())
  name      String
  bio       String?
  videos    Video[]
  followers CreatorFollow[]
}
model CreatorFollow {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  creator   Creator  @relation(fields: [creatorId], references: [id])
  creatorId Int
}
model Video {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  filename    String
  durationSec Int?
  creator     Creator   @relation(fields: [creatorId], references: [id])
  creatorId   Int
  tags        Tag[]     @relation("VideoTags")
  createdAt   DateTime  @default(now())
  courseItem  CourseItem?
}
model Tag {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  videos Video[] @relation("VideoTags")
}
model MicroCourse {
  id          Int          @id @default(autoincrement())
  title       String
  description String?
  items       CourseItem[]
  createdAt   DateTime     @default(now())
  progress    Progress[]
}

model CourseItem {
  id         Int        @id @default(autoincrement())
  video      Video      @relation(fields: [videoId], references: [id])
  videoId    Int        @unique
  course     MicroCourse @relation(fields: [courseId], references: [id])
  courseId   Int
  position   Int
}
model Progress {
  id        Int         @id @default(autoincrement())
  user      User        @relation(fields: [userId], references: [id])
  userId    Int
  course    MicroCourse @relation(fields: [courseId], references: [id])
  courseId  Int
  percent   Int         @default(0)
  updatedAt DateTime    @updatedAt
}

